.side_bar
  .side_bar__username
    -# = current_user.name
    .side_bar__username--namebox
      .side_bar__username--namebox---nametext
        = current_user.name
      .side_bar__username--namebox---icon
        = link_to new_group_path, class: "side_bar__btn" do
          = icon('fas', 'pencil-alt')
          -# %i.fas.fa-pen-nib
        = link_to edit_user_path(current_user), class: "side_bar__btn" do
          =icon('fas', 'wrench')
  .side_bar__group_list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message

    