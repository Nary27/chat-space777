.message{data: {message: {id: message.id}}}
  .main_chat__message_list--box
    .main_chat__message_list--box---name
      = message.user.name
    .main_chat__message_list--box---date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main_chat__message_list--message
    - if message.content.present?
      %p.main_chat__message_list--message__content
        = message.content
    = image_tag message.image.url, class: 'main_chat__message_list--message__image' if message.image.present?

